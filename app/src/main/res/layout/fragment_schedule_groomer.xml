<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="765dp"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_default_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Default Schedule"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sun_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Sunday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_sun_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_sun_box" />

    <TextView
        android:id="@+id/tv_mon_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Monday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_sun_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_mon_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_sun_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_mon_box" />

    <TextView
        android:id="@+id/tv_tue_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Tuesday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_mon_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_tue_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_mon_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_tue_box" />

    <TextView
        android:id="@+id/tv_wed_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Wedneday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_tue_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_wed_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toEndOf="@+id/checkBox_tue_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_wed_box" />

    <TextView
        android:id="@+id/tv_thurs_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Thursday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_wed_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_thurs_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_wed_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_thurs_box" />

    <TextView
        android:id="@+id/tv_fri_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Friday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_thurs_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_fri_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_thurs_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_fri_box" />

    <TextView
        android:id="@+id/tv_sat_box"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Saturday"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/tv_fri_box"
        app:layout_constraintTop_toBottomOf="@+id/tv_default_schedule" />

    <CheckBox
        android:id="@+id/checkBox_sat_work"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="72dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/checkBox_fri_work"
        app:layout_constraintTop_toBottomOf="@+id/tv_sat_box" />

    <TextView
        android:id="@+id/tv_start_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:text="Start:"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_sun_work" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_start_spin"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_mon_work" />

    <TextView
        android:id="@+id/tv_end_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:text="End:"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/spinner"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_tue_work" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toEndOf="@+id/tv_end_spin"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_tue_work" />

</android.support.constraint.ConstraintLayout>